<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <!-- Sticky Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/imagelogo"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:adjustViewBounds="true"
            android:src="@drawable/final_logo"
            android:background="@drawable/rounded_grid_image_home_fragement"
            android:clipToOutline="true" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/tutorial"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center_vertical" />

    </LinearLayout>

    <!-- Scrollable Tutorial Content -->
    <ScrollView
        android:id="@+id/scrollableTutorial"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/how_to_book_services"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Step 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Choose Your Service"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textColor="#333333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/browse_through_our_wide_range_of_categories_like_salon_plumbing_cleaning_etc_and_tap_on_your_desired_service"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="#666666" />

            <!-- Step 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_2_select_date_and_time"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textColor="#333333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pick_a_convenient_date_and_time_for_your_service_to_be_delivered_we_offer_flexible_slots_throughout_the_day"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="#666666" />

            <!-- Step 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_3_confirm_booking"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textColor="#333333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/review_your_service_details_and_tap_on_the_book_now_button_to_confirm_your_booking"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:textColor="#666666" />

            <!-- Final Note -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nonce_confirmed_our_team_will_assign_a_professional_and_you_ll_get_notified_instantly_sit_back_and_relax"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:textColor="#444444" />

            <!-- Section: How to Reset/Forget Password -->
            <TextView
                android:id="@+id/title_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/how_to_reset_forgot_password"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp" />

            <!-- Step 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_1_tap_on_forgot_password_at_the_login_screen"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/you_ll_find_the_forgot_password_option_below_the_login_button_tap_it_to_begin_the_reset_process"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <!-- Step 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_2_enter_your_registered_email_address"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/make_sure_you_enter_the_same_email_used_during_registration_this_helps_us_identify_your_account"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <!-- Step 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_3_tap_on_reset_password"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/after_tapping_we_will_send_a_reset_password_link_to_your_email_this_may_take_a_few_seconds"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <!-- Step 4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_4_open_your_email_and_click_the_reset_link"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/you_will_be_redirected_to_a_secure_page_to_set_a_new_password_for_your_account"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />

            <!-- Final Tip -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/n_once_you_reset_the_password_use_your_new_password_to_login_again"
                android:textSize="16sp"
                android:textColor="#444444"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="24dp" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
