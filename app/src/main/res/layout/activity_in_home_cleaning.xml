<?xml version="1.0" encoding="utf-8"?>
                        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Sticky Toolbar -->
                            <androidx.appcompat.widget.Toolbar
                                android:id="@+id/toolbar"
                                android:layout_width="match_parent"
                                android:layout_height="?attr/actionBarSize"
                                android:background="@color/white"
                                android:elevation="4dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical"
                                    android:padding="8dp">

                                    <ImageView
                                        android:id="@+id/backbutton"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/back_button"
                                        android:layout_marginEnd="16dp"/>

                                    <TextView
                                        android:id="@+id/toolbar_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/select_your_preference"
                                        android:textStyle="bold"
                                        android:textSize="20sp"
                                        android:textColor="@android:color/black"/>
                                </LinearLayout>

                            </androidx.appcompat.widget.Toolbar>

                            <androidx.core.widget.NestedScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fillViewport="true"
                                android:padding="5dp"
                                android:background="@drawable/background">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <!-- Home Cleaning Card -->
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="12dp"
                                        app:cardElevation="4dp">

                                        <LinearLayout
                                            android:id="@+id/homecleaning"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:padding="16dp">

                                            <!-- Service Image -->
                                            <ImageView
                                                android:id="@+id/homeCleaningImage"
                                                android:layout_width="80dp"
                                                android:layout_height="80dp"
                                                android:scaleType="centerCrop"
                                                android:clipToOutline="true"
                                                android:src="@drawable/grid_home_home_cleaning"
                                                android:background="@drawable/rounded_grid_image_home_fragement"/>

                                            <!-- Text Content -->
                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:orientation="vertical"
                                                android:paddingStart="12dp">

                                                <TextView
                                                    android:id="@+id/homeCleaningTitle"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/home_cleaning"
                                                    android:textSize="18sp"
                                                    android:textStyle="bold"/>

                                                <TextView
                                                    android:id="@+id/homeCleaningPrice"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/standard_cleaning"
                                                    android:textSize="14sp"
                                                    android:textColor="@color/black"/>

                                                <TextView
                                                    android:id="@+id/homeCleaningBrands"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/trusted_by_5000_customers"
                                                    android:textSize="12sp"
                                                    android:textColor="@color/primary_text_color"/>
                                            </LinearLayout>
                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <!-- Sofa & Bedsheet Cleaning Card -->
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="8dp"
                                        app:cardCornerRadius="12dp"
                                        app:cardElevation="4dp">

                                        <LinearLayout
                                            android:id="@+id/sofacleaning"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:padding="16dp">

                                            <!-- Service Image -->
                                            <ImageView
                                                android:id="@+id/sofaCleaningImage"
                                                android:layout_width="80dp"
                                                android:layout_height="80dp"
                                                android:scaleType="centerCrop"
                                                android:clipToOutline="true"
                                                android:src="@drawable/grid_home_sofa_cleaning"
                                                android:background="@drawable/rounded_grid_image_home_fragement"/>

                                            <!-- Text Content -->
                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight="1"
                                                android:orientation="vertical"
                                                android:paddingStart="12dp">

                                                <TextView
                                                    android:id="@+id/sofaCleaningTitle"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/sofa_amp_badsheet_cleaning"
                                                    android:textSize="18sp"
                                                    android:textStyle="bold"/>

                                                <TextView
                                                    android:id="@+id/sofaCleaningPrice"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/deep_cleaning"
                                                    android:textSize="14sp"
                                                    android:textColor="@color/black"/>

                                                <TextView
                                                    android:id="@+id/sofaCleaningBrands"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/professional_steam_cleaning_services"
                                                    android:textSize="12sp"
                                                    android:textColor="@color/primary_text_color"/>
                                            </LinearLayout>
                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>

                            </androidx.core.widget.NestedScrollView>

                        </LinearLayout>
