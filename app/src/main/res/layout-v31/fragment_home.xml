<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@drawable/background"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Horizontal Image Scroll Section -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fillViewport="true"
            android:scrollbars="none"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/temp_architec"
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/rounded_grid_image_home_fragement"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_architectre" />
                
                <ImageView
                    android:id="@+id/template_home_cleaning"
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="10dp"
                    android:paddingBottom="30dp"
                    android:background="@drawable/rounded_grid_image_home_fragement"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_cleanning" />

                <ImageView
                    android:id="@+id/template_salon"
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="10dp"
                    android:paddingBottom="30dp"
                    android:background="@drawable/rounded_grid_image_home_fragement"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_salone" />
                
                <ImageView
                    android:id="@+id/templet_ac_service"
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="10dp"
                    android:paddingBottom="30dp"
                    android:background="@drawable/rounded_grid_image_home_fragement"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ac_services" />
                

                <ImageView
                    android:id="@+id/template_electri_plumber"
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_marginEnd="10dp"
                    android:paddingBottom="30dp"
                    android:background="@drawable/rounded_image_home_fragement"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/home_ele_plu" />
                
            </LinearLayout>
        </HorizontalScrollView>

        <!-- Title for Categories -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/explore_by_category"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"/>

        <!-- Grid Layout for Categories -->
        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="2"
            app:rowCount="6">

            <LinearLayout
                android:id="@+id/image_interior_desin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                app:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginStart="0dp"
                    android:background="@drawable/rounded_grid_image_home_fragement"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/grid_home_architech" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/interior_design"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/get_a_new_look_for_your_home"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/image_home_renorvation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                app:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_grid_image_home_fragement"
                    android:src="@drawable/grid_home_renorvation"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_renorvation"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/design_your_dream_space_with_expert_architecture"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/image_home_clining"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                app:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_grid_image_home_fragement"
                    android:src="@drawable/grid_home_home_cleaning"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="House Cleaning"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/a_clean_home_is_a_happy_home_book_professional_cleaning"
                    android:textSize="12sp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/image_sofa_clening"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                app:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_grid_image_home_fragement"
                    android:src="@drawable/grid_home_sofa_cleaning"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sofa_cleaning"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/comfort_meets_clean_professional_sofa_cleaning_services"
                    android:textSize="12sp"/>
            </LinearLayout>




            <LinearLayout
                android:id="@+id/image_men_salon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                app:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_grid_image_home_fragement"
                    android:src="@drawable/grid_home_man_salon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/man_s_salon"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sharp_stylish_and_groomed_men_s_salon_at_home"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/image_women_salon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                app:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_grid_image_home_fragement"
                    android:src="@drawable/grid_home_woman_salon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/women_s_salon"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pamper_yourself_with_luxury_salon_services_at_home"
                    android:textSize="12sp"/>
            </LinearLayout>




            <LinearLayout
                android:id="@+id/image_electrician"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                app:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_grid_image_home_fragement"
                    android:src="@drawable/grid_home_electrician"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electrician"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/power_up_fix_leaks_reliable_electrical_plumbing_services"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/image_ac_clening"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                app:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_grid_image_home_fragement"
                    android:src="@drawable/grid_home_ac_cleaner"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AC Cleaning"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comfort Meets Clean – Professional Sofa Cleaning Services!"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/image_plumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                app:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_grid_image_home_fragement"
                    android:src="@drawable/grid_home_plumber"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plumbing"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No More Leaks – Trusted Plumbing Services at Your Call! "
                    android:textSize="12sp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/image_ac_repairing"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                app:layout_columnWeight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_grid_image_home_fragement"
                    android:src="@drawable/grid_home_ac_repairing"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AC Service"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stay Cool, Stay Comfortable – AC Services at Your Doorstep!"
                    android:textSize="12sp"/>
            </LinearLayout>



        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>

</ScrollView>
